# Environment configuration example
# Copy this file to .env and update with your values

# Application settings
APP_NAME=Code MCP
APP_ENV=development  # Options: development, testing, staging, production
DEBUG=true
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

# Database settings
DATABASE_URL=postgresql://code_mcp_user:code_mcp_pass@postgres:5432/code_mcp
# Or use individual components:
POSTGRES_DB=code_mcp
POSTGRES_USER=code_mcp_user
POSTGRES_PASSWORD=code_mcp_pass
POSTGRES_HOST=postgres  # Use 'localhost' for local development without Docker
POSTGRES_PORT=5432

# Database logging configuration
DB_LOGGING_ENABLED=true
DB_MAX_REQUEST_BODY_SIZE=1048576  # 1MB in bytes
DB_MAX_RESPONSE_BODY_SIZE=1048576  # 1MB in bytes
DB_RETENTION_DAYS=30

# Connection pool settings
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30

# Sensitive headers to filter from logs (comma-separated)
DB_SENSITIVE_HEADERS=authorization,cookie,x-api-key,x-auth-token

# HTTP MCP Server Settings (src/code_mcp/servers/http/)
HTTP_SERVER_NAME=code-mcp-http
HTTP_SERVER_VERSION=1.0.0

# HTTP Transport Settings (default: http)
HTTP_TRANSPORT=http  # Options: http, stdio, sse
HTTP_HOST=127.0.0.1
HTTP_PORT=8000
HTTP_PATH=/mcp

# HTTP Client Settings (for the HTTP tools)
# HTTP_PROXY_URL=http://127.0.0.1:8080  # Optional: Route through Burp/proxy
HTTP_REQUEST_TIMEOUT=30
HTTP_VERIFY_SSL=true

# API Keys (if applicable)
# API_KEY=your-api-key-here
# SECRET_KEY=your-secret-key-here

# PgAdmin settings (for docker-compose)
PGADMIN_DEFAULT_EMAIL=admin@code-mcp.local
PGADMIN_DEFAULT_PASSWORD=admin_pass
PGADMIN_CONFIG_SERVER_MODE=False  # Run in desktop mode (single user)
PGADMIN_CONFIG_MASTER_PASSWORD_REQUIRED=False  # Don't require master password
PGADMIN_CONFIG_ENHANCED_COOKIE_PROTECTION=False  # Simplify cookie handling for local dev

# External services
# REDIS_URL=redis://localhost:6379/0
# ELASTICSEARCH_URL=http://localhost:9200
